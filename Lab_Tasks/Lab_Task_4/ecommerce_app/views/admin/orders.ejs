<div class="container mt-5">
    <h2>Orders</h2>
    <table class="table">
        <thead><tr><th>Customer</th><th>Items</th><th>Total Price</th><th>Date</th><th>Status</th></tr></thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.userId.email %></td>
                    <td><%= order.items.map(item => item.quantity + 'x ' + item.productId.name).join(', ') %></td>
                    <td><%= order.totalPrice %></td>
                    <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                    <td><%= order.status %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>