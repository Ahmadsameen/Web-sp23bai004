<div class="container mt-5">
    <h2>Add Product</h2>
    <form action="/admin/products/add" method="POST">
        <div class="mb-3"><input type="text" name="name" class="form-control" placeholder="Name" required></div>
        <div class="mb-3"><input type="number" name="price" class="form-control" placeholder="Price" step="0.01" required></div>
        <div class="mb-3"><input type="text" name="description" class="form-control" placeholder="Description"></div>
        <div class="mb-3"><input type="text" name="imageUrl" class="form-control" placeholder="Image URL"></div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>